<UserControl x:Class="CCTV.Views.LiveViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCTV.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF434C5E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5E81AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- PTZ 버튼 스타일 -->
        <Style x:Key="PTZButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#FF88C0D0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- 채널 버튼 스타일 -->
        <Style x:Key="ChannelButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FF434C5E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5E81AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFBF616A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C566A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF2E3440">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- 좌측 제어 패널 -->
        <Border Grid.Column="0" Background="#FF3B4252" BorderBrush="#FF4C566A" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                
                <!-- CCTV 연결 -->
                <GroupBox Header="CCTV 연결" Foreground="White" BorderBrush="#FF5E81AC" Margin="0,0,0,20">
                    <Button Content="CCTV 연결" Style="{StaticResource ButtonStyle}"
                            Click="CCTVButton_Click" Height="40"/>
                </GroupBox>

                <!-- 채널 선택 -->
                <GroupBox Header="채널 선택" Foreground="White" BorderBrush="#FF5E81AC" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="현재 채널: 선택 안됨" x:Name="CurrentChannelText" 
                                  Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <UniformGrid Columns="2" Rows="2">
                            <ToggleButton Name="Channel33Button" Content="33" Style="{StaticResource ChannelButtonStyle}" 
                                         Click="ChannelButton_Click" Tag="33"/>
                            <ToggleButton Name="Channel34Button" Content="34" Style="{StaticResource ChannelButtonStyle}" 
                                         Click="ChannelButton_Click" Tag="34"/>
                            <ToggleButton Name="Channel35Button" Content="35" Style="{StaticResource ChannelButtonStyle}" 
                                         Click="ChannelButton_Click" Tag="35"/>
                            <ToggleButton Name="Channel36Button" Content="36" Style="{StaticResource ChannelButtonStyle}" 
                                         Click="ChannelButton_Click" Tag="36"/>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>

                <!-- 프리셋 -->
                <GroupBox Header="프리셋" Foreground="White" BorderBrush="#FF5E81AC">
                    <UniformGrid Columns="2">
                        <Button Content="프리셋 1" Style="{StaticResource ButtonStyle}"
                                Click="Preset1_Click"/>
                        <Button Content="프리셋 2" Style="{StaticResource ButtonStyle}"
                                Click="Preset2_Click"/>
                    </UniformGrid>
                </GroupBox>
            </StackPanel>
        </Border>
        
        <!-- 중앙 상태 표시 영역 -->
        <Border Grid.Column="1" Background="#FF3B4252" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="실시간 CCTV 재생" FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="별도 CCTV 모니터 창이 우측에 표시됩니다" FontSize="16" 
                          Foreground="#FFECEFF4" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                          
                <TextBlock Text="메인 윈도우를 이동하면 CCTV 창도 함께 따라옵니다" FontSize="14" 
                          Foreground="#FF88C0D0" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                          
                <Border Background="#FF434C5E" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="시스템 상태" FontSize="16" FontWeight="Bold" 
                                  Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Separator Background="#FF5E81AC" Margin="0,0,0,10"/>
                        <TextBlock Text="✓ SDK 초기화 완료" FontSize="12" 
                                  Foreground="#FFA3BE8C" Margin="0,2"/>
                        <TextBlock Text="✓ CCTV 윈도우 생성 완료" FontSize="12" 
                                  Foreground="#FFA3BE8C" Margin="0,2"/>
                        <TextBlock Text="○ NVR 연결 대기 중" FontSize="12" 
                                  Foreground="#FFEBCB8B" Margin="0,2"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 우측 PTZ 제어 영역 -->
        <Border Grid.Column="2" Background="#FF434C5E" BorderBrush="#FF4C566A" BorderThickness="1,0,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 제목 -->
                <TextBlock Grid.Row="0" Text="PTZ 제어" 
                          FontSize="16" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center" 
                          Margin="0,10,0,20"/>
                
                <!-- PTZ 제어 버튼들 -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>  <!-- 틸트 UP -->
                        <RowDefinition Height="60"/>  <!-- 팬 LEFT/RIGHT -->
                        <RowDefinition Height="60"/>  <!-- 틸트 DOWN -->
                        <RowDefinition Height="20"/>  <!-- 간격 -->
                        <RowDefinition Height="50"/>  <!-- 줌 IN -->
                        <RowDefinition Height="50"/>  <!-- 줌 OUT -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 틸트 UP -->
                    <Button Grid.Row="0" Grid.Column="1" Content="▲ UP" 
                            Style="{StaticResource PTZButtonStyle}" 
                            Click="TiltUp_Click"/>
                    
                    <!-- 팬 LEFT -->
                    <Button Grid.Row="1" Grid.Column="0" Content="◀ LEFT" 
                            Style="{StaticResource PTZButtonStyle}" 
                            Click="PanLeft_Click"/>
                    
                    <!-- 팬 RIGHT -->
                    <Button Grid.Row="1" Grid.Column="2" Content="RIGHT ▶" 
                            Style="{StaticResource PTZButtonStyle}" 
                            Click="PanRight_Click"/>
                    
                    <!-- 틸트 DOWN -->
                    <Button Grid.Row="2" Grid.Column="1" Content="▼ DOWN" 
                            Style="{StaticResource PTZButtonStyle}" 
                            Click="TiltDown_Click"/>
                    
                    <!-- 줌 IN -->
                    <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="🔍+ ZOOM IN" 
                            Style="{StaticResource PTZButtonStyle}" 
                            Click="ZoomIn_Click"/>
                    
                    <!-- 줌 OUT -->
                    <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Content="🔍- ZOOM OUT" 
                            Style="{StaticResource PTZButtonStyle}" 
                            Click="ZoomOut_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl> 