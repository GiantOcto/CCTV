<Window x:Class="CCTV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCTV"
        mc:Ignorable="d"
        Title="CCTV 제어 시스템" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Loaded="Window_Loaded"
        Background="#FF2E3440">
    
    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF434C5E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5E81AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- PTZ 버튼 스타일 -->
        <Style x:Key="PTZButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#FF88C0D0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- 채널 버튼 스타일 -->
        <Style x:Key="ChannelButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FF434C5E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5E81AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFBF616A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C566A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 중앙 비디오 영역 (확장됨) -->
        <Border Grid.Column="0" Grid.Row="0" Background="#FF3B4252" Margin="10">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
                <TextBlock Text="CCTV 영상" FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,20"/>
                
                <TextBlock Text="채널을 선택하면 여기에 실시간 영상이 표시됩니다" FontSize="16" 
                          Foreground="#FFECEFF4" HorizontalAlignment="Left" Margin="0,0,0,20"/>
                
                <Border Background="#FF434C5E" CornerRadius="10" Padding="20" HorizontalAlignment="Left">
                    <StackPanel>
                        <TextBlock Text="시스템 상태" FontSize="16" FontWeight="Bold" 
                                  Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                        <Separator Background="#FF5E81AC" Margin="0,0,0,10"/>
                        <TextBlock Text="✓ SDK 초기화 완료" FontSize="12" 
                                  Foreground="#FFA3BE8C" Margin="0,2"/>
                        <TextBlock Text="✓ CCTV 윈도우 생성 완료" FontSize="12" 
                                  Foreground="#FFA3BE8C" Margin="0,2"/>
                        <TextBlock Text="○ NVR 연결 대기 중" FontSize="12" 
                                  Foreground="#FFEBCB8B" Margin="0,2"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- 우측 제어 영역 (PTZ + 기존 좌측 제어 통합) -->
        <Border Grid.Column="1" Grid.Row="0" Background="#FF434C5E" BorderBrush="#FF4C566A" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    
                    <!-- PTZ 제어 섹션 -->
                    <GroupBox Header="PTZ 제어" Foreground="White" BorderBrush="#FF5E81AC" Margin="0,0,0,20">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>  <!-- 틸트 UP -->
                                <RowDefinition Height="60"/>  <!-- 팬 LEFT/RIGHT -->
                                <RowDefinition Height="60"/>  <!-- 틸트 DOWN -->
                                <RowDefinition Height="20"/>  <!-- 간격 -->
                                <RowDefinition Height="50"/>  <!-- 줌 IN -->
                                <RowDefinition Height="50"/>  <!-- 줌 OUT -->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 틸트 UP -->
                            <Button Grid.Row="0" Grid.Column="1" Content="▲ UP" 
                                    Style="{StaticResource PTZButtonStyle}" 
                                    Click="TiltUp_Click"/>
                            
                            <!-- 팬 LEFT -->
                            <Button Grid.Row="1" Grid.Column="0" Content="◀ LEFT" 
                                    Style="{StaticResource PTZButtonStyle}" 
                                    Click="PanLeft_Click"/>
                            
                            <!-- 팬 RIGHT -->
                            <Button Grid.Row="1" Grid.Column="2" Content="RIGHT ▶" 
                                    Style="{StaticResource PTZButtonStyle}" 
                                    Click="PanRight_Click"/>
                            
                            <!-- 틸트 DOWN -->
                            <Button Grid.Row="2" Grid.Column="1" Content="▼ DOWN" 
                                    Style="{StaticResource PTZButtonStyle}" 
                                    Click="TiltDown_Click"/>
                            
                            <!-- 줌 IN -->
                            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="🔍+ ZOOM IN" 
                                    Style="{StaticResource PTZButtonStyle}" 
                                    Click="ZoomIn_Click"/>
                            
                            <!-- 줌 OUT -->
                            <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Content="🔍- ZOOM OUT" 
                                    Style="{StaticResource PTZButtonStyle}" 
                                    Click="ZoomOut_Click"/>
                        </Grid>
                    </GroupBox>

                    <!-- CCTV 연결 섹션 -->
                    <GroupBox Header="CCTV 연결" Foreground="White" BorderBrush="#FF5E81AC" Margin="0,0,0,20">
                        <Button Content="CCTV 연결" Style="{StaticResource ButtonStyle}"
                                Click="CCTVButton_Click" Height="40"/>
                    </GroupBox>

                    <!-- 화면 전환 섹션 -->
                    <GroupBox Header="화면 전환" Foreground="White" BorderBrush="#FF5E81AC" Margin="0,0,0,20">
                        <StackPanel>
                            <Button x:Name="ViewToggleButton" Content="📹 실시간 영상" Style="{StaticResource ButtonStyle}"
                                    Click="ViewToggleButton_Click" Height="40" Background="#FF81A1C1"/>
                            <TextBlock x:Name="CurrentViewText" Text="현재: 실시간 CCTV 화면" 
                                      Foreground="#FFECEFF4" HorizontalAlignment="Center" 
                                      FontSize="10" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 채널 선택 섹션 -->
                    <GroupBox Header="채널 선택" Foreground="White" BorderBrush="#FF5E81AC" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="현재 채널: 선택 안됨" x:Name="CurrentChannelText" 
                                      Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <UniformGrid Columns="2" Rows="2">
                                <ToggleButton Name="Channel33Button" Content="33" Style="{StaticResource ChannelButtonStyle}" 
                                             Click="ChannelButton_Click" Tag="33"/>
                                <ToggleButton Name="Channel34Button" Content="34" Style="{StaticResource ChannelButtonStyle}" 
                                             Click="ChannelButton_Click" Tag="34"/>
                                <ToggleButton Name="Channel35Button" Content="35" Style="{StaticResource ChannelButtonStyle}" 
                                             Click="ChannelButton_Click" Tag="35"/>
                                <ToggleButton Name="Channel36Button" Content="36" Style="{StaticResource ChannelButtonStyle}" 
                                             Click="ChannelButton_Click" Tag="36"/>
                            </UniformGrid>
                        </StackPanel>
                    </GroupBox>

                    <!-- 프리셋 섹션 -->
                    <GroupBox Header="프리셋" Foreground="White" BorderBrush="#FF5E81AC">
                        <UniformGrid Columns="2">
                            <Button Content="프리셋 1" Style="{StaticResource ButtonStyle}"
                                    Click="Preset1_Click"/>
                            <Button Content="프리셋 2" Style="{StaticResource ButtonStyle}"
                                    Click="Preset2_Click"/>
                        </UniformGrid>
                    </GroupBox>
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- 하단 상태바 -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
               Background="#FF2E3440" 
               BorderBrush="#FF4C566A" 
               BorderThickness="0,1,0,0"
               Height="30">
            <TextBlock x:Name="StatusTextBlock" Text="CCTV 제어 시스템 준비됨" 
                       Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0"/>
        </Border>
    </Grid>
</Window>
