<Window x:Class="CCTV.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CCTV" mc:Ignorable="d" Title="CCTV 제어 시스템" Height="1080" Width="640" d:DesignHeight="1080" d:DesignWidth="640" WindowStartupLocation="CenterScreen" WindowState="Normal" Loaded="Window_Loaded" KeyDown="Window_KeyDown" WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True">

    <Window.Background>
        <LinearGradientBrush StartPoint="0.1,0.3" EndPoint="1,1">
            <GradientStop Color="#FF00061C" Offset="0"/>
            <GradientStop Color="#0f002e" Offset="0.3"/>
            <GradientStop Color="#250040" Offset="0.5"/>
            <GradientStop Color="#0f002e" Offset="0.7"/>
            <GradientStop Color="#FF00061C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF434C5E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5E81AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PTZ 버튼 스타일 -->
        <Style x:Key="PTZButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#FF88C0D0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- CCTV 상단 틸팅 버튼 스타일 -->
        <Style x:Key="CCTVUpTiltStyle" TargetType="RepeatButton">
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="../images/up_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="../images/up_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CCTV 하단 틸트 버튼 스타일 -->
        <Style x:Key="CCTVDownTiltStyle" TargetType="RepeatButton">
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="../images/down_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="../images/down_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CCTV 좌행 패닝 버튼 스타일 -->
        <Style x:Key="CCTVLeftPanStyle" TargetType="RepeatButton">
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="../images/left_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="../images/left_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CCTV 우행 패닝 버튼 스타일 -->
        <Style x:Key="CCTVRightPanStyle" TargetType="RepeatButton">
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="../images/right_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="../images/right_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CCTV 줌 인 버튼 스타일 -->
        <Style x:Key="CCTVZoomInStyle" TargetType="RepeatButton">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="../images/zoom_in_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="../images/zoom_in_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CCTV 줌 아웃 버튼 스타일 -->
        <Style x:Key="CCTVZoomOutStyle" TargetType="RepeatButton">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="../images/zoom_out_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="../images/zoom_out_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 프리셋 버튼 스타일 -->
        <Style x:Key="Preset_1ButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="/Images/preset_1_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="/Images/preset_1_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 프리셋 2 버튼 스타일 -->
        <Style x:Key="Preset_2ButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent">
                            <Image x:Name="buttonImage" Source="/Images/preset_2_normal.png" Stretch="Uniform"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="buttonImage" Property="Source" Value="/Images/preset_2_pressed.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 채널 버튼 스타일 -->
        <Style x:Key="ChannelButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FF77CAD1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5E81AC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FF5E81AC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF81A1C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" TouchDown="Grid_TouchDown" ManipulationStarted="Grid_ManipulationStarted" IsManipulationEnabled="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="400"/>
            </Grid.RowDefinitions>

            <!-- 상단 비디오 영역 (확장됨) -->
            <Border Grid.Row="0" Margin="10,10,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- CCTV 선택 드롭다운 -->
                    <Border Grid.Row="0" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="현장명:" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="CCTVSelectionComboBox" Width="200" Height="30" FontSize="12" 
                                      SelectionChanged="CCTVSelectionComboBox_SelectionChanged"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 비디오 영역 -->
                    <Border Grid.Row="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.1,0.3" EndPoint="1,1">
                                <GradientStop Color="#FF00061C" Offset="0"/>
                                <GradientStop Color="#0f002e" Offset="0.3"/>
                                <GradientStop Color="#250040" Offset="0.5"/>
                                <GradientStop Color="#0f002e" Offset="0.7"/>
                                <GradientStop Color="#FF00061C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>

            <!-- 하단 제어 영역 (PTZ + 기존 좌측 제어 통합) -->
            <Border Grid.Row="1" BorderBrush="#FF4C566A" BorderThickness="0,1,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.1,0.3" EndPoint="1,1">
                        <GradientStop Color="#FF00061C" Offset="0"/>
                        <GradientStop Color="#0f002e" Offset="0.3"/>
                        <GradientStop Color="#250040" Offset="0.5"/>
                        <GradientStop Color="#0f002e" Offset="0.7"/>
                        <GradientStop Color="#FF00061C" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="10" Background="Transparent" IsManipulationEnabled="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 첫 번째 행: PTZ 제어 + 채널 선택 통합 -->
                        <Border Grid.Row="0" BorderBrush="White" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="8">
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 좌측: 틸팅 제어 (4개 버튼) + 채널 버튼 -->
                                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Margin="0,0,5,0" Padding="3">
                                    <StackPanel>
                                        <!-- 틸팅 제어 -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100"/>
                                                <RowDefinition Height="100"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 틸트 UP (상단 중앙) -->
                                            <RepeatButton Grid.Row="0" Grid.Column="1" Style="{StaticResource CCTVUpTiltStyle}" Click="TiltUp_Click" Margin="1" MinHeight="40" MinWidth="40"/>

                                            <!-- 팬 LEFT (하단 좌측) -->
                                            <RepeatButton Grid.Row="1" Grid.Column="0" Style="{StaticResource CCTVLeftPanStyle}" Click="PanLeft_Click" Margin="1" MinHeight="40" MinWidth="40"/>

                                            <!-- 틸트 DOWN (하단 중앙) -->
                                            <RepeatButton Grid.Row="1" Grid.Column="1" Style="{StaticResource CCTVDownTiltStyle}" Click="TiltDown_Click" Margin="1" MinHeight="40" MinWidth="40"/>

                                            <!-- 팬 RIGHT (하단 우측) -->
                                            <RepeatButton Grid.Row="1" Grid.Column="2" Style="{StaticResource CCTVRightPanStyle}" Click="PanRight_Click" Margin="1" MinHeight="40" MinWidth="40"/>
                                        </Grid>

                                        <!-- 채널 선택 -->
                                        <StackPanel Margin="0,10,0,0" Height="147">

                                            <UniformGrid Columns="4" Rows="2">
                                                <ToggleButton Name="Channel33Button" Content="Ch.1" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="33" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel34Button" Content="Ch.2" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="34" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel35Button" Content="Ch.3" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="35" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel36Button" Content="Ch.4" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="36" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel37Button" Content="Ch.5" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="37" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel38Button" Content="Ch.6" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="38" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel39Button" Content="Ch.7" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="39" Height="60" Margin="5"/>
                                                <ToggleButton Name="Channel40Button" Content="Ch.8" Style="{StaticResource ChannelButtonStyle}" Click="ChannelButton_Click" Tag="40" Height="60" Margin="5"/>
                                            </UniformGrid>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- 우측: 줌 + 프리셋 제어 -->
                                <Grid Grid.Column="1" Margin="5,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- 상단: 줌 + 프리셋 제어 (2x2 배치) -->
                                    <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Margin="0,0,0,5" Padding="5">
                                        <UniformGrid Columns="2" Rows="2">
                                            <!-- 첫 번째 행: 줌 제어 -->
                                            <RepeatButton Style="{StaticResource CCTVZoomInStyle}" Click="ZoomIn_Click" Height="90" HorizontalAlignment="Center" Width="130" VerticalAlignment="Top" Margin="2"/>
                                            <RepeatButton Style="{StaticResource CCTVZoomOutStyle}" Click="ZoomOut_Click" Height="90" HorizontalAlignment="Center" Width="130" VerticalAlignment="Top" Margin="2"/>

                                            <!-- 두 번째 행: 프리셋 제어 -->
                                            <Button Style="{StaticResource Preset_1ButtonStyle}" Click="Preset1_Click" Height="90" HorizontalAlignment="Center" Width="130" VerticalAlignment="Top" Margin="2"/>
                                            <Button Style="{StaticResource Preset_2ButtonStyle}" Click="Preset2_Click" Height="90" HorizontalAlignment="Center" Width="130" VerticalAlignment="Top" Margin="2"/>
                                        </UniformGrid>
                                    </Border>

                                    <!-- 하단: 화면 제어 -->
                                    <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Margin="0,5,0,0" Padding="5">
                                        <StackPanel>
                                            <Button x:Name="ViewToggleButton" Content="🎬 녹화 재생" Style="{StaticResource ButtonStyle}" Click="ViewToggleButton_Click" Height="50" Background="#FF77CAD1" Margin="0,15,0,10" Width="200"/>
                                            <Button Content="❌ 앱 종료" Style="{StaticResource ButtonStyle}" Click="ExitButton_Click" Height="50" Background="#FFBF616A" Margin="5" Width="200"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>

                    </Grid>
            </Border>


        </Grid>
    </Border>
</Window>
